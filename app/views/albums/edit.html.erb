<p>Edit Album</p>
<form action="/albums/<%= @album.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="name">Album Name</label>
  <input type="text" id="name" name="album[name]" value="<%= @album.name %>">

  <label for="band_id">Band's Name</label>
  <select name="album[band_id]" id="band_id">
    <% Band.all.each do |band| %>
      <% if band.id == @album.band_id %>
        <option value="<%= band.id %>" selected><%= band.name %></option>
      <% end %>
      <option value="<%= band.id %>"><%= band.name %></option>
    <% end %>
  </select>
  <br>
  <input type="radio" name="album[genre]" id="studio" value="studio">
  <label for="studio">Studio</label>
  <br>
  <input type="radio" name="album[genre]" id="live" value="live">
  <label for="live">Live</label>
  <br>
  <input type="submit" value="Edit Album">

</form>
